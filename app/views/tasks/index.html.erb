<h1>首頁</h1>
<%= link_to t('view.new'), new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %>
      <%= link_to t('view.edit'), edit_task_path(task) %>
      <%= link_to t('view.destroy'), task_path(task), method:'delete', data: { confirm: '確認刪除？'} %>
    </li>
  <% end %>
</ul>
